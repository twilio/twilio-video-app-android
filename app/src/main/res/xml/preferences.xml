<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory android:title="@string/general">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref_enable_stats"
            android:title="@string/enable_stats"/>
        <CheckBoxPreference
            android:key="pref_enable_insights"
            android:title="@string/enable_insights"
            android:defaultValue="true"/>
        <CheckBoxPreference
            android:key="pref_record_participants_on_connect"
            android:title="@string/record_participants_on_connect"
            android:defaultValue="false"
            />
        <CheckBoxPreference
            android:key="pref_enable_automatic_subscription"
            android:title="@string/enable_automatic_track_subscription"
            android:defaultValue="true"
            />
        <ListPreference
            android:defaultValue="prod"
            android:entries="@array/environment_array"
            android:entryValues="@array/environment_array_values"
            android:key="pref_environment"
            android:summary="%s"
            android:title="@string/environment_string"
            android:negativeButtonText="@null"/>
        <ListPreference
            android:defaultValue="peer-to-peer"
            android:entries="@array/topology_array"
            android:entryValues="@array/topology_array"
            android:key="pref_topology"
            android:summary="%s"
            android:title="@string/topology"
            android:negativeButtonText="@null"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/media">
        <ListPreference
            android:key="pref_audio_codecs"
            android:negativeButtonText="@null"
            android:summary="%s"
            android:title="@string/audio_codecs" />
        <com.twilio.video.app.data.NumberPreference
            style="@style/AppTheme.Preference.DialogPreference"
            android:key="pref_max_audio_bitrate"
            android:title="@string/max_audio_bitrate" />
        <ListPreference
            android:key="pref_video_codecs"
            android:negativeButtonText="@null"
            android:summary="%s"
            android:title="@string/video_codecs" />
        <CheckBoxPreference
            android:key="pref_vp8_simulcast"
            android:title="@string/vp8_simulcast"
            android:defaultValue="false"/>
        <com.twilio.video.app.data.NumberPreference
            style="@style/AppTheme.Preference.DialogPreference"
            android:key="pref_max_video_bitrate"
            android:title="@string/max_video_bitrate" />
        <ListPreference
            android:defaultValue="0"
            android:entries="@array/aspect_ratio_array"
            android:entryValues="@array/aspect_ratio_array_values"
            android:key="pref_aspect_ratio"
            android:summary="%s"
            android:title="@string/aspect_ratio"
            android:negativeButtonText="@null"/>
        <com.twilio.video.app.data.RangeBarPreference
            android:title="@string/fps"
            app:endKey="pref_max_fps"
            app:endTick="30"
            app:height="@dimen/preference_aspect_ratio_height"
            app:startKey="pref_min_fps"
            app:startTick="0" />
        <com.twilio.video.app.data.RangeBarPreference
            android:title="@string/video_dimensions"
            app:endKey="pref_max_video_dim"
            app:entries="@array/video_dimensions_array"
            app:height="@dimen/preference_video_dimensions_height"
            app:pinRadius="36dp"
            app:startKey="pref_min_video_dim" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/about">
        <Preference
            android:key="pref_identity"
            android:title="@string/identity"/>
        <Preference
            android:key="pref_version"
            android:title="@string/version"/>
        <Preference
            android:key="pref_video_library_version"
            android:title="@string/video_library_version"/>
        <Preference
            android:key="pref_logout"
            android:title="@string/logout"/>
    </PreferenceCategory>
</PreferenceScreen>