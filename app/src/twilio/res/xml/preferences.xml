<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory android:title="@string/general">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref_enable_stats"
            android:title="@string/enable_stats"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/media">
        <ListPreference
            android:defaultValue="0"
            android:entries="@array/aspect_ratio_array"
            android:entryValues="@array/aspect_ratio_array_values"
            android:key="pref_aspect_ratio"
            android:summary="%s"
            android:title="@string/aspect_ratio"
            android:negativeButtonText="@null"/>
        <com.twilio.video.app.data.RangeBarPreference
            android:title="@string/fps"
            app:endKey="pref_max_fps"
            app:endTick="30"
            app:height="@dimen/preference_aspect_ratio_height"
            app:startKey="pref_min_fps"
            app:startTick="0" />
        <com.twilio.video.app.data.RangeBarPreference
            android:title="@string/video_dimensions"
            app:endKey="pref_max_video_dim"
            app:entries="@array/video_dimensions_array"
            app:height="@dimen/preference_video_dimensions_height"
            app:pinRadius="36dp"
            app:startKey="pref_min_video_dim" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/settings_screen_about">
        <Preference
            android:key="pref_version"
            android:title="@string/version"/>
        <Preference
            android:key="pref_video_library_version"
            android:title="@string/video_library_version"/>
        <Preference
            android:key="pref_logout"
            android:title="@string/logout"/>
    </PreferenceCategory>
</PreferenceScreen>